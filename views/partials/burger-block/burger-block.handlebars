<li class="row list-group-item d-inline-flex justify-content-between">
    <p class="lead align-items-center col-sm-12 col-md-6">
        {{dataValues.burger_name}}
    </p>

    <div class="btn-group justify-content-center col-sm-12 col-md-6">
        <button class="btn btn-outline-dark devour" data-id={{dataValues.id}} data-devoured={{devoured}}>
            {{#if devoured}}
            Devour this shit
            {{else}}
            Give it back
            {{/if}}
        </button>
        <button class="btn btn-danger delete-burger" data-id="{{dataValues.id}}">DEL</button>
    </div>
</li>